{
  "scripts": {
    "svgo": "yarn run svgo-background && yarn run svgo-header && yarn run svgo-icons",
    "svgo-background": "node_modules/.bin/svgo -i Source\\ Files/Background/Stars.svg -o static/images/stars.svg",
    "svgo-header": "svgo --config '{ \"plugins\": [ {\"removeAttrs\": { \"attrs\": \"(style|font-weight|font-size|font-family)\" } } ] }' --enable=removeAttrs -i Source\\ Files/Logo/Header.svg -o static/images/header.svg",
    "svgo-icons": "yarn run svgo-icon-burger && yarn run svgo-icon-down",
    "svgo-icon-burger": "svgo --config '{ \"plugins\": [ {\"removeAttrs\": { \"attrs\": \"(style|font-weight|font-size|font-family)\" } } ] }' --enable=removeAttrs -i Source\\ Files/Icons/Burger.svg -o static/images/burger.svg",
    "svgo-icon-down": "svgo --config '{ \"plugins\": [ {\"removeAttrs\": { \"attrs\": \"(style|font-weight|font-size|font-family)\" } } ] }' --enable=removeAttrs -i Source\\ Files/Icons/Down.svg -o static/images/down.svg",
    "validate": "yarn run validate-iiif"
  }
}
